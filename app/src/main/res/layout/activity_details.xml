<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/catPicDetails"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/catNameDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="CatName"
        android:textSize="32sp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toStartOf="@+id/toggleFavDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catPicDetails" />

    <TextView
        android:id="@+id/catDescDetails"
        android:layout_width="411dp"
        android:layout_height="195dp"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catNameDetails" />

    <ToggleButton
        android:id="@+id/toggleFavDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="â˜…"
        android:textOn="ðŸŒŸ"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/catDescDetails"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/catOriginDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catDescDetails" />

    <TextView
        android:id="@+id/catTemperamentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catOriginDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>